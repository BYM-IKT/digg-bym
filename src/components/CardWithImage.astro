---
const { src, alt } = Astro.props;
---

<div class="card">
  <img src={src} alt={alt} height="150px" width="150px" />
  <div class="card-content">
    <slot />
  </div>
</div>

<style>
  .card {
    display: flex;
    padding: 1rem;
    gap: 1rem;
  }
  .card-content {
    flex: 1;
    align-items: start;
  }
</style>
