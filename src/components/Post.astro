---
import { Image } from "astro:assets";

interface Props {
  title: string;
  summary: string;
  author: string;
  url?: string;
  image: {
    url: string;
    alt: string;
  };
}

const { title, summary, url, image } = Astro.props;
---

<article>
  <a href={url}>
    <Image src={image.url} alt={image.alt} width="300" height="200" />
    <h2>{title}</h2>
    <p>{summary}</p>
  </a>
</article>
<style>
  h2 {
    margin: 0;
    font-size: 2rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  a {
    text-decoration: none;
    color: inherit;
    display: inline-block;
    width: fit-content;
  }
  article {
    width: fit-content;
  }
</style>
