---
import { Picture } from "astro:assets";
import type { ImageMetadata } from "astro";
import type { NewsfeedProps } from "@interfaces/newsfeed";
import type { MatspaltenFrontmatter } from "@interfaces/frontmatter";

interface Props extends NewsfeedProps, MatspaltenFrontmatter {}

const { draft, title, url, image, elementsPerRow = 1 } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<a class="newsfeed-post-link" href={url}>
  <div class="newsfeed-post-draft-image-wrapper">
    <Picture
      class="newsfeed-post-image"
      style={image.height ? { height: image.height } : null}
      src={images[image.url]()}
      alt={image.alt}
    />
    {draft === true && <span>Draft</span>}
  </div>
  <h2 class="newsfeed-post-heading">{title}</h2>
</a>
<style define:vars={{ elementsPerRow }}>
  .newsfeed-post-draft-image-wrapper {
    position: relative;
  }
  .newsfeed-post-draft-image-wrapper span {
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(255, 255, 255, 0.5);
    padding: 0.25rem 0.5rem;
    font-size: 1rem;
    border-radius: 5px;
    color: #000;
    z-index: 1;
  }
  .newsfeed-post-heading {
    margin: 0;
    font-size: max(2rem, 4vw);
    word-wrap: break-word;
  }
  .newsfeed-post-image {
    object-fit: cover;
    width: 100%;
  }
  .newsfeed-post-link {
    color: inherit;
    display: inline-block;
    width: calc(97% / var(--elementsPerRow));
    @media (max-width: 1200px) {
      width: calc(97% / max(var(--elementsPerRow) - 1, 1));
    }
    @media (max-width: 800px) {
      width: 97%;
    }
  }
  .newsfeed-post-link:hover {
    text-decoration: none;
  }
</style>
