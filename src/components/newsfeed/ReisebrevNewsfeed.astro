---
import "./newsfeed.css";
import { Picture } from "astro:assets";
import type { ImageMetadata } from "astro";
import type { NewsfeedProps } from "@interfaces/newsfeed";
import type { ReisebrevFrontmatter } from "@interfaces/frontmatter";

interface Props extends NewsfeedProps, ReisebrevFrontmatter {}

const {
  draft,
  title,
  url,
  image,
  destination,
  elementsPerRow = 1,
} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<a class="newsfeed-post-link" href={url}>
  <div class="newsfeed-post-image-wrapper">
    <Picture
      class="newsfeed-post-image"
      style={image.height ? { height: image.height } : null}
      src={images[image.url]()}
      alt={image.alt}
    />
    {draft === true && <span class="newsfeed-post-draft">Draft</span>}
  </div>
  <div class="newsfeed-post-heading-wrapper">
    <span class="newsfeed-post-destination">{destination}:</span>
    <h2 class="newsfeed-post-heading">{title}</h2>
  </div>
</a>
<style define:vars={{ elementsPerRow }}>
  .newsfeed-post-destination {
    font-size: 1.25rem;
  }
</style>
