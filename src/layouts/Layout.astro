---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a class="logo" href="/">Digitaliseringsgevinst'n</a>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  .logo {
    font-size: 6rem;
    text-decoration: none;
    color: black;
  }
  main {
    margin: 0 auto;
    width: 1200px;
    background-color: white;
    height: 100%;
    padding: 1rem 1rem 10rem 1rem;
  }
  body {
    background-color: #ddd;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin: 0;
  }
  header {
    background-color: white;
    padding: 1rem;
    display: flex;
  }
  html {
    height: 100%;
  }
</style>
