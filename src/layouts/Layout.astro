---
import SpreGledeKnapp from "@components/SpreGledeKnapp.astro";
import { Image } from "astro:assets";
import Logo from "@assets/logo.svg?raw";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content="Digital Utviklings egen nettavis!" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="Digitaliseringsgevinst'n" />
    <meta
      property="og:description"
      content="Digital Utviklings egen nettavis!"
    />
    <meta property="og:image" content="/karvesvingen3.png" />
    <meta property="og:url" content="https://digg.bymoslo.no" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Digitaliseringsgevinst'n" />
    <meta property="og:locale" content="nb_NO" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Digitaliseringsgevinst'n" />
    <meta
      name="twitter:description"
      content="Digital Utviklings egen nettavis!"
    />
    <meta name="twitter:image" content="/karvesvingen3.png" />
    <meta name="twitter:url" content="https://digg.bymoslo.no" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link
      rel="icon"
      href="/favicon.svg"
      type="image/x-icon"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="icon"
      href="/favicon-dark-mode.svg"
      type="image/x-icon"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Digitaliseringsgevinst'n</title>
  </head>
  <body>
    <header>
      <a class="logo-and-app-name-wrapper" href="/">
        <div class="logo">
          <Fragment set:html={Logo} />
        </div>
        <span class="app-name visible-non-phone">igitaliseringsgevinst'n</span>
        <span class="app-name visible-phone-only">igg!</span>
      </a>
      <SpreGledeKnapp />
    </header>
    <main>
      <div class="visible-non-phone">
        <div class="reklame">
          <Image
            src={images["/src/assets/bil-i-oslo-reklame.gif"]()}
            alt="Reklame for Bil i Oslo"
            width="150"
            height="600"
          />
          <Image
            src={images["/src/assets/aws-nikolai.gif"]()}
            alt="Reklame for Bil i Oslo"
            width="150"
            height="150"
          />
          <Image
            src={images["/src/assets/lenka-kaffe-reklame.gif"]()}
            alt="Reklame for kaffe på Lenka"
            width="150"
            height="600"
          />
        </div>
      </div>
      <slot />
      <div class="visible-non-phone">
        <div class="reklame">
          <Image
            src={images["/src/assets/bil-i-oslo-reklame.gif"]()}
            alt="Reklame for Bil i Oslo"
            width="150"
            height="600"
          />
          <Image
            src={images["/src/assets/aws-nikolai.gif"]()}
            alt="Reklame for Bil i Oslo"
            width="150"
            height="150"
          />
          <Image
            src={images["/src/assets/lenka-kaffe-reklame.gif"]()}
            alt="Reklame for kaffe på Lenka"
            width="150"
            height="600"
          />
        </div>
      </div>
    </main>
  </body>
</html>
<style is:global>
  .reklame {
    position: sticky;
    right: 0;
    top: 0;
    z-index: 1000;
  }
  .logo-and-app-name-wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    text-decoration: none;
    color: black;
  }
  .app-name {
    font-family: "Comic Sans MS", sans-serif;
    font-size: calc(1rem + 2vw);
    font-stretch: expanded;
  }
  .logo {
    display: flex;
    width: calc(1rem + 2vw);
    height: calc(1rem + 2vw);
    stroke-width: 0.5rem;
  }
  .visible-non-phone {
    @media (max-width: 800px) {
      display: none;
    }
  }
  .visible-phone-only {
    @media (min-width: 801px) {
      display: none;
    }
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  body {
    background-color: #eee;
    height: fit-content;
    display: flex;
    flex-direction: column;
    margin: 0;
  }
  main {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    margin: 0 auto;
    max-width: 1200px;
    @media (max-width: 1600px) {
      padding: 1rem auto 10rem auto;
    }
    background-color: white;
    height: 100%;
    padding: 1rem 1rem 10rem 1rem;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  html {
    height: 100%;
  }
  p {
    font-size: 1.3rem;
  }
</style>
