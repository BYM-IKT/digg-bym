---
import type { LederFrontmatter } from "@interfaces/frontmatter";
import Layout from "./Layout.astro";
import type { MDXLayoutProps } from "astro";

interface Props extends MDXLayoutProps<LederFrontmatter> {}

const {
  frontmatter: { title, author, summary },
} = Astro.props;
---

<Layout>
  <article>
    <pre>Digg mener:</pre>
    <h1>{title}</h1>
    <p class="ingress">{summary}</p>
    <span class="authored-by"
      >Skrevet av {author}, Fungerende ansvarlig redakt√∏r</span
    >
    <slot />
  </article>
</Layout>

<style>
  article {
    margin: 0;
  }

  h1 {
    margin: 0;
    font-size: 4rem;
  }

  pre {
    font-size: 2rem;
    margin: 0;
    font-family: inherit;
    font-weight: bold;
  }

  .authored-by {
    font-size: 1.25rem;
    color: #666;
  }

  .ingress {
    font-size: 2rem;
    margin-top: 1rem;
  }
</style>
