---
import Layout from "./Layout.astro";

const {
  frontmatter: { title, author },
} = Astro.props;
---

<Layout>
  <article>
    <h1>{title}</h1>
    <span class="authored-by">{`Av ${author}`}</span>
    <slot />
  </article>
</Layout>

<style>
  article {
    margin: 0;
  }

  h1 {
    margin: 0;
    font-size: 4rem;
  }

  .authored-by {
    font-size: 1.25rem;
    color: #666;
  }
</style>
